{
  "model": {
    "model_name": "meta-llama/Meta-Llama-3.1-8B",
    "tokenizer_name": null,
    "cache_dir": null,
    "trust_remote_code": true,
    "use_local_model": false,
    "precision": "bf16"
  },
  "lora": {
    "use_lora": true,
    "r": 16,
    "alpha": 32,
    "dropout": 0.05,
    "bias": "none",
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ],
    "task_type": "CAUSAL_LM",
    "lora_path": null
  },
  "data": {
    "data_dir": "data/processed",
    "train_file": "train.jsonl",
